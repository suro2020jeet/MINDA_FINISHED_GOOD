<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout" xmlns="sap.m"
	controllerName="com.minda.FinishedGood.controller.finishedGood" xmlns:u="sap.ui.unified">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}" backgroundDesign="Standard">
					<content>
						<VBox justifyContent="Center" alignContent="Center" alignItems="Center" width="100%" height="100%">
							<VBox class="fgStockHolderCss" width="{= ${device>/system/phone}? '80%':'60%'}" height="{= ${device>/system/phone}? '80%':'50%'}">
								<f:SimpleForm class="sapUiSmallMargin" editable="true" layout="ResponsiveGridLayout" title="{i18n>title}" labelSpanXL="6" labelSpanL="4"
									labelSpanM="6" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="1" emptySpanL="1" emptySpanM="1" emptySpanS="0" columnsXL="1"
									columnsL="1" columnsM="1" singleContainerFullSize="false">
									<f:content>
										<Label design="Bold" text="FG Stock to be uploaded for(Please select date)"/>
										<HBox direction="{= ${device>/system/phone}? 'Column':'Row'}">
											<RadioButton groupName="date" text="{viewModel>/currentDate}" selected="true"/>
											<RadioButton groupName="date" text="{viewModel>/nextDate}"/>
										</HBox>
										<Label design="Bold" text="Upload CSV files only."/>
										<u:FileUploader id="fileUploader" name="myFileUpload" uploadUrl="/sap/opu/odata/sap/ZINV_CAP_DEC_SRV/uploadSet" tooltip="Upload your file to the local server" fileType="csv"
											uploadComplete="handleUploadComplete" change="handleValueChange" sendXHR="true"/>
									</f:content>
								</f:SimpleForm>
							</VBox>
						</VBox>
					</content>
					<footer>
						<OverflowToolbar>
							<ToolbarSpacer/>
							<Button icon="sap-icon://download" text="Download" type="Accept" press="onPressDownload"/>
							<Button icon="sap-icon://save" text="Submit" type="Accept" press="onSubmitPress"/>
						</OverflowToolbar>
					</footer>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>